<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <in.bankersdaily.ui.MaterialRippleLayout
        android:id="@+id/ripple_layout"
        android:paddingTop="22dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="#666"
        tools:ignore="RtlHardcoded">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/title"
                android:layout_toRightOf="@id/image_view"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:lineSpacingExtra="6dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingRight="20dp"
                android:paddingEnd="20dp"
                android:text="Expected Questions: Seating Arrangements 1234 1234567890123456123465789123456789"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/image_view"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:tint="#acacac"
                    android:src="@drawable/ic_time_16dp"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="75dp"
                    android:textColor="#999999"
                    android:text="23 hours ago"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/category_layout"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:tint="#acacac"
                        android:src="@drawable/ic_label_16dp"/>

                    <TextView
                        android:id="@+id/category"
                        android:text="abcdefghijklmno"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </in.bankersdaily.ui.MaterialRippleLayout>
</LinearLayout>


